<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
</head>

<body>
<script src="{$basePath}/assets/css.js"></script>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <span class="navbar-brand">Right place for manage your project</span>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span
                    class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link{ifset $homepageView} active{/ifset}" n:href="Homepage:Default">Home</a></li>
                <li class="nav-item"><a class="nav-link{ifset $projectView} active{/ifset}" n:href="Project:Default">Manage projects</a></li>
            </ul>
        </div>
    </div>
</nav>

<div id="spinner">
    <div class="spinner-border text-primary" ></div>
</div>

{snippet flashes}
    <div id="flash-messages" style="z-index:99999; right:0; top:0;" class="position-fixed p-4">
        <span n:foreach="$flashes as $flash" style="float:right;clear:both;"
             class="alert text-center fade-in alert-{$flash->type}" role="alert">{$flash->message}</span>
    </div>
{/snippet}

{include content}

<footer class="bg-light text-center text-lg-start mt-5">
    <!-- Copyright -->
    <div class="text-center p-3 bg-light">
        Â© {date("Y")} Copyright:
        <span class="text-dark" >Filipovsky</span>
    </div>
    <!-- Copyright -->
</footer>

<script src="{$basePath}/assets/app.js"></script>
</body>
</html>
